{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "BuildDebug",
            "type": "shell",
            "command": "${workspaceFolder}/../../windows/python/python.exe",
            "args": [
                "${workspaceFolder}/../../windows/scons/scons.py",
                "--debug=time",
                "use_mingw=yes",
                "target=editor",
                "platform=windows",
                "bits=64",
                "dev_build=yes",
                "debug_symbols=yes"
            ],
            "group": {
                "isDefault": true,
                "kind": "build"
            },
            "options": {
                "cwd": "${workspaceFolder}/../",
                "env": {
                    "PATH": "%PATH%;../windows/mingw64/bin"
                }
            },
            "problemMatcher": "$gcc"
        },
    ]
}